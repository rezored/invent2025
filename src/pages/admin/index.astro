---
import Layout from "../../layouts/Layout.astro";
import HeaderMain from "../../components/HeaderMain.astro";

const lang = "bg";
const pageTitle = "Admin Dashboard | Hidden Instruments";
---

<Layout title={pageTitle} lang={lang}>
    <HeaderMain slot="header" />

    <main class="flex-1 max-w-6xl mx-auto w-full py-12 px-4">
        <div
            class="mb-8 border-b border-border-dark pb-6 flex justify-between items-center"
        >
            <div>
                <h1 class="text-4xl font-bold mb-2 tracking-tight text-white">
                    Admin Dashboard
                </h1>
                <p class="text-slate-400">Manage Licenses & Usage</p>
            </div>
            <button
                id="logoutBtn"
                class="hidden text-sm text-red-400 hover:text-red-300"
            >
                Logout
            </button>
        </div>

        <!-- Login Section -->
        <div
            id="loginSection"
            class="max-w-md mx-auto bg-surface-dark p-8 rounded-2xl border border-border-dark shadow-2xl"
        >
            <h2 class="text-xl font-bold mb-4">Admin Access</h2>
            <div class="mb-4">
                <label
                    class="block text-xs font-mono uppercase text-slate-500 mb-2"
                    >Secret Key</label
                >
                <input
                    id="secretInput"
                    type="password"
                    class="w-full bg-background-dark/50 border border-border-dark rounded-xl px-4 py-3 text-white focus:border-primary outline-none transition-all"
                    placeholder="Enter admin secret..."
                />
            </div>
            <button
                id="loginBtn"
                class="w-full py-3 bg-primary text-white font-bold rounded-xl hover:bg-primary/80 transition-all"
            >
                Login
            </button>
            <p id="loginError" class="text-red-500 text-sm mt-3 hidden"></p>
        </div>

        <!-- Dashboard Content -->
        <div id="dashboardContent" class="hidden space-y-8">
            <!-- Actions -->
            <div
                class="bg-surface-dark p-6 rounded-2xl border border-border-dark"
            >
                <h3 class="text-lg font-bold mb-4 flex items-center gap-2">
                    <span class="material-symbols-outlined text-primary"
                        >add_circle</span
                    >
                    Create License
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
                    <div class="md:col-span-1">
                        <label
                            class="block text-xs font-mono uppercase text-slate-500 mb-2"
                            >Type</label
                        >
                        <select
                            id="newType"
                            class="w-full bg-background-dark border border-border-dark rounded-lg px-3 py-2 text-white outline-none"
                        >
                            <option value="PRO">PRO</option>
                            <option value="TRIAL">TRIAL</option>
                        </select>
                    </div>
                    <div class="md:col-span-2">
                        <label
                            class="block text-xs font-mono uppercase text-slate-500 mb-2"
                            >Domain (Optional)</label
                        >
                        <input
                            id="newDomain"
                            type="text"
                            placeholder="example.com"
                            class="w-full bg-background-dark border border-border-dark rounded-lg px-3 py-2 text-white outline-none"
                        />
                    </div>
                    <div class="md:col-span-1">
                        <button
                            id="createBtn"
                            class="w-full py-2 bg-primary text-white font-bold rounded-lg hover:bg-primary/80 transition-all"
                        >
                            Generate
                        </button>
                    </div>
                </div>
                <div
                    id="createResult"
                    class="mt-4 hidden p-4 bg-black/20 rounded-lg font-mono text-sm break-all border border-white/10"
                >
                </div>
            </div>

            <!-- License List -->
            <div
                class="bg-surface-dark rounded-2xl border border-border-dark overflow-hidden"
            >
                <div
                    class="p-6 border-b border-border-dark flex justify-between items-center"
                >
                    <h3 class="text-lg font-bold">Active Licenses</h3>
                    <button
                        id="refreshBtn"
                        class="text-primary text-sm hover:underline"
                        >Refresh</button
                    >
                </div>
                <div class="overflow-x-auto">
                    <table class="w-full text-left text-sm">
                        <thead
                            class="bg-black/20 text-slate-500 font-mono uppercase text-xs"
                        >
                            <tr>
                                <th class="p-4">Key</th>
                                <th class="p-4">Type</th>
                                <th class="p-4">Domain</th>
                                <th class="p-4 text-right">Usage</th>
                                <th class="p-4 text-right">Limit</th>
                                <th class="p-4">Created</th>
                            </tr>
                        </thead>
                        <tbody
                            id="licenseTableBody"
                            class="divide-y divide-border-dark text-slate-300"
                        >
                            <!-- Rows injected here -->
                            <tr
                                ><td
                                    colspan="6"
                                    class="p-8 text-center text-slate-500"
                                    >Loading...</td
                                ></tr
                            >
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</Layout>

<script>
    const API_URL = "/api/v1/admin/licenses";

    // DOM Elements
    const loginSection = document.getElementById("loginSection");
    const dashboardContent = document.getElementById("dashboardContent");
    const secretInput = document.getElementById("secretInput");
    const loginBtn = document.getElementById("loginBtn");
    const logoutBtn = document.getElementById("logoutBtn");
    const loginError = document.getElementById("loginError");
    const licenseTableBody = document.getElementById("licenseTableBody");
    const refreshBtn = document.getElementById("refreshBtn");

    const createBtn = document.getElementById("createBtn");
    const newType = document.getElementById("newType");
    const newDomain = document.getElementById("newDomain");
    const createResult = document.getElementById("createResult");

    // State
    let secret = localStorage.getItem("admin_secret") || "";

    // Init
    if (secret) {
        checkAuth();
    } else {
        showLogin();
    }

    // Auth Functions
    function showLogin() {
        loginSection.classList.remove("hidden");
        dashboardContent.classList.add("hidden");
        logoutBtn.classList.add("hidden");
    }

    function showDashboard() {
        loginSection.classList.add("hidden");
        dashboardContent.classList.remove("hidden");
        logoutBtn.classList.remove("hidden");
        fetchLicenses();
    }

    async function checkAuth() {
        // Simple check by trying to fetch
        const res = await fetch(API_URL, {
            headers: { "x-admin-secret": secret },
        });
        if (res.status === 401) {
            showLogin();
            localStorage.removeItem("admin_secret");
            if (secret)
                loginError.innerText = "Session expired or invalid secret";
            loginError.classList.remove("hidden");
        } else if (res.ok) {
            showDashboard();
        } else {
            alert("System error checking auth");
        }
    }

    loginBtn.addEventListener("click", () => {
        const val = secretInput.value.trim();
        if (!val) return;
        secret = val;
        localStorage.setItem("admin_secret", secret);
        checkAuth();
    });

    logoutBtn.addEventListener("click", () => {
        localStorage.removeItem("admin_secret");
        secret = "";
        window.location.reload();
    });

    // Data Functions
    async function fetchLicenses() {
        licenseTableBody.innerHTML = `<tr><td colspan="6" class="p-8 text-center text-slate-500">Loading...</td></tr>`;

        try {
            const res = await fetch(API_URL, {
                headers: { "x-admin-secret": secret },
            });
            if (!res.ok) throw new Error("Failed to fetch");
            const data = await res.json();
            renderLicenses(data);
        } catch (e) {
            licenseTableBody.innerHTML = `<tr><td colspan="6" class="p-8 text-center text-red-400">Error loading data</td></tr>`;
        }
    }

    function renderLicenses(licenses) {
        if (!licenses || licenses.length === 0) {
            licenseTableBody.innerHTML = `<tr><td colspan="6" class="p-8 text-center text-slate-500">No licenses found</td></tr>`;
            return;
        }

        licenseTableBody.innerHTML = licenses
            .map(
                (l) => `
        <tr class="hover:bg-white/5 transition-colors">
            <td class="p-4 font-mono text-xs text-primary bg-primary/5 rounded-l-lg m-1">${l.key}</td>
            <td class="p-4">
                <span class="px-2 py-1 rounded text-xs font-bold ${l.type === "PRO" ? "bg-purple-500/20 text-purple-400" : "bg-blue-500/20 text-blue-400"}">
                    ${l.type}
                </span>
            </td>
            <td class="p-4 text-slate-400 font-mono text-xs">${l.domain || "-"}</td>
            <td class="p-4 text-right font-mono">${l.total_usage || 0}</td>
            <td class="p-4 text-right font-mono text-slate-500">/ ${l.quota_limit}</td>
            <td class="p-4 text-xs text-slate-500 rounded-r-lg">
                ${new Date(l.created_at).toLocaleDateString()}
            </td>
        </tr>
    `,
            )
            .join("");
    }

    refreshBtn.addEventListener("click", fetchLicenses);

    // Create License
    createBtn.addEventListener("click", async () => {
        const type = newType.value;
        const domain = newDomain.value.trim();

        createBtn.disabled = true;
        createResult.classList.add("hidden");

        try {
            const res = await fetch(API_URL, {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                    "x-admin-secret": secret,
                },
                body: JSON.stringify({ type, domain }),
            });

            const data = await res.json();

            if (data.success) {
                createResult.innerHTML = `
                <div class="text-green-400 mb-1">Success! License Generated:</div>
                <div id="licenseKeyDisplay" class="text-white font-bold cursor-pointer bg-black p-3 rounded flex justify-between items-center group relative hover:bg-black/80 transition-colors" title="Click to Copy">
                    <span>${data.key}</span>
                    <span class="material-symbols-outlined text-slate-500 group-hover:text-white transition-colors">content_copy</span>
                    <span id="copyFeedback" class="absolute right-2 top-2 bg-green-500 text-black text-xs px-2 py-1 rounded opacity-0 transition-opacity">Copied!</span>
                </div>
            `;
                createResult.classList.remove("hidden");

                // Add Copy Listener
                document
                    .getElementById("licenseKeyDisplay")
                    .addEventListener("click", async () => {
                        await navigator.clipboard.writeText(data.key);
                        const feedback =
                            document.getElementById("copyFeedback");
                        feedback.classList.remove("opacity-0");
                        setTimeout(
                            () => feedback.classList.add("opacity-0"),
                            1500,
                        );
                    });

                fetchLicenses(); // Refresh list
                newDomain.value = ""; // Reset form
            } else {
                throw new Error(data.error || "Unknown error");
            }
        } catch (e) {
            alert("Error: " + e.message);
        } finally {
            createBtn.disabled = false;
        }
    });
</script>

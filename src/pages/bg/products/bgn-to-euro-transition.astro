---
import Layout from "../../../layouts/Layout.astro";
import HeaderLP from "../../../components/HeaderLP.astro";
import FooterSimple from "../../../components/FooterSimple.astro";
import { getLangFromUrl, useTranslations, localizePath } from "../../../localization/utils";

const lang = "bg";
const t = useTranslations(lang);
const pageTitle = "BGN to EUR Transition Plugin | Invent2025";
---

<Layout title={pageTitle} lang={lang}>
    <HeaderLP slot="header" lang={lang} />

    <main class="max-w-7xl mx-auto px-4 pb-20">
        <!-- Hero -->
        <div class="text-center py-20">
            <span
                class="inline-block py-1 px-3 rounded-full bg-blue-500/10 text-blue-400 text-xs font-mono font-bold mb-4"
                >{t("plugin.hero.tag")}</span
            >
            <h1 class="text-5xl md:text-6xl font-bold mb-6">
                {t("plugin.hero.title")}
            </h1>
            <p class="text-xl text-slate-400 max-w-2xl mx-auto mb-10">
                {t("plugin.hero.desc")}
            </p>
            <div class="flex justify-center gap-4">
                <a
                    href="#pricing"
                    class="px-8 py-4 rounded-xl bg-white text-slate-900 font-bold hover:bg-slate-200 transition-colors"
                    >{t("plugin.btn.pricing")}</a
                >
                <a
                    href="https://wordpress.org/plugins/prices-in-bgn-and-eur/"
                    target="_blank"
                    class="px-8 py-4 rounded-xl bg-slate-800 text-white font-bold border border-slate-700 hover:bg-slate-700 transition-colors"
                    >{t("plugin.btn.download")}</a
                >
            </div>
        </div>

        <!-- Features Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
            <div
                class="bg-surface-dark p-8 rounded-2xl border border-border-dark"
            >
                <span
                    class="material-symbols-outlined text-4xl text-blue-400 mb-4"
                    >currency_exchange</span
                >
                <h3 class="text-xl font-bold mb-2">
                    {t("plugin.feat1.title")}
                </h3>
                <p class="text-slate-400 text-sm">
                    {t("plugin.feat1.desc")}
                </p>
            </div>
            <div
                class="bg-surface-dark p-8 rounded-2xl border border-border-dark"
            >
                <span
                    class="material-symbols-outlined text-4xl text-green-400 mb-4"
                    >verified_user</span
                >
                <h3 class="text-xl font-bold mb-2">
                    {t("plugin.feat2.title")}
                </h3>
                <p class="text-slate-400 text-sm">
                    {t("plugin.feat2.desc")}
                </p>
            </div>
            <div
                class="bg-surface-dark p-8 rounded-2xl border border-border-dark"
            >
                <span
                    class="material-symbols-outlined text-4xl text-purple-400 mb-4"
                    >database</span
                >
                <h3 class="text-xl font-bold mb-2">
                    {t("plugin.feat3.title")}
                </h3>
                <p class="text-slate-400 text-sm">
                    {t("plugin.feat3.desc")}
                </p>
            </div>
        </div>

        <!-- Pricing -->
        <div id="pricing" class="max-w-5xl mx-auto">
            <h2 class="text-3xl font-bold text-center mb-12">
                {t("plugin.pricing.title")}
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Free Tier -->
                <div
                    class="bg-surface-dark p-8 rounded-2xl border border-border-dark flex flex-col"
                >
                    <div class="mb-6">
                        <h3 class="text-xl font-bold text-slate-100">
                            {t("plugin.plan.free.title")}
                        </h3>
                        <p class="text-slate-400 text-sm mt-2">
                            {t("plugin.plan.free.desc")}
                        </p>
                    </div>
                    <div class="text-4xl font-bold text-white mb-6">
                        {t("plugin.plan.free.price")}
                    </div>
                    <ul class="space-y-4 mb-8 flex-1">
                        <li class="flex items-center text-slate-300">
                            <span
                                class="material-symbols-outlined feature-check"
                                >check</span
                            >
                            {t("plugin.feat.dual")}
                        </li>
                        <li class="flex items-center text-slate-300">
                            <span
                                class="material-symbols-outlined feature-check"
                                >check</span
                            >
                            {t("plugin.feat.disclaimer")}
                        </li>
                        <li class="flex items-center text-slate-300">
                            <span
                                class="material-symbols-outlined feature-check"
                                >check</span
                            >
                            {t("plugin.feat.convert20")}
                        </li>
                    </ul>
                    <a
                        href="https://wordpress.org/plugins/prices-in-bgn-and-eur/"
                        class="block w-full py-3 rounded-lg border border-slate-600 text-center text-white hover:bg-slate-800 transition-colors font-bold"
                        >{t("plugin.btn.download_plugin")}</a
                    >
                </div>

                <!-- Pro Tier -->
                <div
                    class="bg-gradient-to-br from-blue-900 to-slate-900 p-8 rounded-2xl border border-blue-500 relative overflow-hidden flex flex-col shadow-2xl"
                >
                    <div
                        class="absolute top-0 right-0 bg-blue-500 text-white text-xs font-bold px-3 py-1 rounded-bl-lg"
                    >
                        {t("plugin.plan.pro.rec")}
                    </div>
                    <div class="mb-6">
                        <h3 class="text-xl font-bold text-white">
                            {t("plugin.plan.pro.title")}
                        </h3>
                        <p class="text-blue-200 text-sm mt-2">
                            {t("plugin.plan.pro.desc")}
                        </p>
                    </div>
                    <div class="text-4xl font-bold text-white mb-6">
                        <span class="line-through text-slate-400 text-2xl mr-2"
                            >€49</span
                        > €19.99 <span
                            class="text-base font-normal text-blue-200"
                            >{t("plugin.plan.pro.period")}</span
                        >
                    </div>
                    <ul class="space-y-4 mb-8 flex-1">
                        <li class="flex items-center text-white">
                            <span
                                class="material-symbols-outlined feature-check text-blue-300"
                                >check</span
                            >
                            <strong>{t("plugin.feat.unlimited")}</strong>
                        </li>
                        <li class="flex items-center text-white">
                            <span
                                class="material-symbols-outlined feature-check text-blue-300"
                                >check</span
                            >
                            <span>{t("plugin.feat.rounding")}</span>
                        </li>
                        <li class="flex items-center text-white">
                            <span
                                class="material-symbols-outlined feature-check text-blue-300"
                                >check</span
                            >
                            <span>{t("plugin.feat.support")}</span>
                        </li>
                        <li class="flex items-center text-white">
                            <span
                                class="material-symbols-outlined feature-check text-blue-300"
                                >check</span
                            >
                            <span>{t("plugin.feat.domain")}</span>
                        </li>
                    </ul>
                    <button
                        id="btn-buy-pro"
                        class="block w-full py-3 rounded-lg bg-white text-blue-900 text-center hover:bg-blue-50 transition-colors font-bold shadow-lg"
                        >{t("plugin.btn.buy")}</button
                    >
                    <p
                        class="text-center text-blue-200 text-xs mt-4 font-medium animate-pulse"
                    >
                    </p>
                </div>
            </div>

            <p class="text-center text-slate-500 text-sm mt-8">
                {t("plugin.beta")}
            </p>
            <div class="text-center mt-4">
                <a
                    href="/blog/bgn-to-euro-convertor"
                    class="text-xs text-blue-500/50 hover:text-blue-400 transition-colors uppercase tracking-widest font-mono font-bold"
                >
                    {t("plugin.case_study")}
                </a>
            </div>
        </div>
    </main>

    <!-- Payment Modal -->
    <div
        id="payment-modal"
        class="fixed inset-0 z-[100] flex items-center justify-center bg-black/80 backdrop-blur-sm hidden"
    >
        <div
            class="bg-surface-dark p-8 rounded-2xl border border-border-dark max-w-md w-full text-center relative overflow-hidden"
        >
            <div class="scanline"></div>

            <div id="payment-loader" class="mb-6 flex justify-center">
                <span
                    class="material-symbols-outlined text-4xl text-blue-400 animate-spin"
                    >refresh</span
                >
            </div>

            <h3 id="payment-status" class="text-2xl font-bold mb-4 text-white">
                Verifying...
            </h3>

            <p id="payment-success-msg" class="text-slate-300 mb-2"></p>

            <div
                id="payment-key-display"
                class="hidden bg-slate-950 p-4 rounded border border-slate-700 font-mono text-green-400 select-all mb-4 break-all"
            >
            </div>

            <p id="payment-email-msg" class="text-sm text-slate-500 mb-6"></p>

            <button
                onclick="document.getElementById('payment-modal').classList.add('hidden')"
                class="px-6 py-2 rounded-lg bg-slate-800 hover:bg-slate-700 text-white font-bold transition-colors"
            >
                Close
            </button>
        </div>
    </div>

    <!-- Script injected appropriately -->
    <script>
        import "../../../bgn-payment.mjs";
    </script>

    <FooterSimple slot="footer" />
</Layout>

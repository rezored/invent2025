---
import HotelLayout from "../../../layouts/HotelLayout.astro";
import HotelHeader from "../../../components/hotel/HotelHeader.astro";
import HotelFooter from "../../../components/hotel/HotelFooter.astro";
---

<HotelLayout title="Хотел Кралска Градина | Стаи">
    <HotelHeader slot="header" activePage="rooms" />

    <section
        class="hero-wrap hero-wrap-2"
        style="background-image: url('/wp-templates/hotel-booking/images/bg_1.jpg');"
    >
        <div class="overlay"></div>
        <div class="container">
            <div
                class="row no-gutters slider-text align-items-center justify-content-center"
            >
                <div class="col-lg-10 text-center">
                    <p class="breadcrumbs">
                        <span class="me-2"
                            ><a href="/portfolio/hotel-booking"
                                >Начало <i class="fa fa-chevron-right"></i></a
                            ></span
                        >
                        <span
                            >Нашите стаи <i class="fa fa-chevron-right"
                            ></i></span
                        >
                    </p>
                    <h1 class="mb-0 bread">Нашите стаи</h1>
                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section bg-light">
        <div class="container-xl">
            <div class="row justify-content-center">
                <div
                    class="col-md-6 col-lg-4 d-flex align-items-stretch"
                    data-aos="flip-left"
                    data-aos-delay="100"
                    data-aos-duration="1000"
                >
                    <div class="room-wrap d-md-flex flex-md-column-reverse">
                        <a
                            href="#"
                            class="img img-room"
                            style="background-image: url(/wp-templates/hotel-booking/images/room-1.jpg);"
                        ></a>
                        <div class="text p-5 text-center">
                            <h3><a href="#">Президентски Апартамент</a></h3>
                            <p>
                                Най-високото ниво на лукс с две спални,
                                всекидневна и частна тераса.
                            </p>
                            <p class="mb-0 mt-2">
                                <span class="me-3 price"
                                    >350 лв. <small>/ нощ</small></span
                                ><a href="#" class="btn-custom">Резервирай</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div
                    class="col-md-6 col-lg-4 d-flex align-items-stretch"
                    data-aos="flip-left"
                    data-aos-delay="200"
                    data-aos-duration="1000"
                >
                    <div class="room-wrap">
                        <a
                            href="#"
                            class="img img-room"
                            style="background-image: url(/wp-templates/hotel-booking/images/bg_1.jpg);"
                        ></a>
                        <div class="text p-5 text-center">
                            <h3><a href="#">Луксозен Апартамент</a></h3>
                            <p>
                                Простор и стил за вашата романтична почивка или
                                бизнес пътуване.
                            </p>
                            <p class="mb-0 mt-2">
                                <span class="me-3 price"
                                    >250 лв. <small>/ нощ</small></span
                                ><a href="#" class="btn-custom">Резервирай</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div
                    class="col-md-6 col-lg-4 d-flex align-items-stretch"
                    data-aos="flip-left"
                    data-aos-delay="300"
                    data-aos-duration="1000"
                >
                    <div class="room-wrap d-md-flex flex-md-column-reverse">
                        <a
                            href="#"
                            class="img img-room"
                            style="background-image: url(/wp-templates/hotel-booking/images/room-1.jpg);"
                        ></a>
                        <div class="text p-5 text-center">
                            <h3><a href="#">Фамилна стая</a></h3>
                            <p>
                                Удобство за цялото семейство с всички необходими
                                удобства.
                            </p>
                            <p class="mb-0 mt-2">
                                <span class="me-3 price"
                                    >180 лв. <small>/ нощ</small></span
                                ><a href="#" class="btn-custom">Резервирай</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div
                    class="col-md-6 col-lg-4 d-flex align-items-stretch"
                    data-aos="flip-left"
                    data-aos-delay="400"
                    data-aos-duration="1000"
                >
                    <div class="room-wrap">
                        <a
                            href="#"
                            class="img img-room"
                            style="background-image: url(/wp-templates/hotel-booking/images/bg_1.jpg);"
                        ></a>
                        <div class="text p-5 text-center">
                            <h3><a href="#">Класическа стая</a></h3>
                            <p>
                                Уют и комфорт на достъпна цена за вашия престой.
                            </p>
                            <p class="mb-0 mt-2">
                                <span class="me-3 price"
                                    >120 лв. <small>/ нощ</small></span
                                ><a href="#" class="btn-custom">Резервирай</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div
                    class="col-md-6 col-lg-4 d-flex align-items-stretch"
                    data-aos="flip-left"
                    data-aos-delay="500"
                    data-aos-duration="1000"
                >
                    <div class="room-wrap d-md-flex flex-md-column-reverse">
                        <a
                            href="#"
                            class="img img-room"
                            style="background-image: url(/wp-templates/hotel-booking/images/room-1.jpg);"
                        ></a>
                        <div class="text p-5 text-center">
                            <h3><a href="#">Супериор стая</a></h3>
                            <p>
                                Допълнително пространство и модерни мебели за
                                повече комфорт.
                            </p>
                            <p class="mb-0 mt-2">
                                <span class="me-3 price"
                                    >160 лв. <small>/ нощ</small></span
                                ><a href="#" class="btn-custom">Резервирай</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div
                    class="col-md-6 col-lg-4 d-flex align-items-stretch"
                    data-aos="flip-left"
                    data-aos-delay="600"
                    data-aos-duration="1000"
                >
                    <div class="room-wrap">
                        <a
                            href="#"
                            class="img img-room"
                            style="background-image: url(/wp-templates/hotel-booking/images/bg_1.jpg);"
                        ></a>
                        <div class="text p-5 text-center">
                            <h3><a href="#">Делукс стая</a></h3>
                            <p>
                                Изисканост и детайли, които ще направят престоя
                                ви специален.
                            </p>
                            <p class="mb-0 mt-2">
                                <span class="me-3 price"
                                    >150 лв. <small>/ нощ</small></span
                                ><a href="#" class="btn-custom">Резервирай</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section">
        <div class="container-xl">
            <div class="row justify-content-center">
                <div
                    class="col-md-8 heading-section text-center mb-5"
                    data-aos="fade-up"
                    data-aos-duration="1000"
                >
                    <span class="subheading">Услуги</span>
                    <h2 class="mb-4">Разгледайте нашите хотелски услуги</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div
                    class="col-md-3 col-xl-2 text-center d-flex align-items-stretch"
                    data-aos="fade-up"
                    data-aos-delay="100"
                    data-aos-duration="1000"
                >
                    <a href="#" class="services">
                        <div class="icon">
                            <span class="fa-solid fa-wifi"></span>
                        </div>
                        <div class="text">
                            <h2>Безплатен Wi-Fi</h2>
                        </div>
                    </a>
                </div>
                <div
                    class="col-md-3 col-xl-2 text-center d-flex align-items-stretch"
                    data-aos="fade-up"
                    data-aos-delay="200"
                    data-aos-duration="1000"
                >
                    <a href="/portfolio/hotel-booking/rooms" class="services">
                        <div class="icon">
                            <span class="fa-solid fa-calendar-check"></span>
                        </div>
                        <div class="text">
                            <h2>Лесна резервация</h2>
                        </div>
                    </a>
                </div>
                <div
                    class="col-md-3 col-xl-2 text-center d-flex align-items-stretch"
                    data-aos="fade-up"
                    data-aos-delay="300"
                    data-aos-duration="1000"
                >
                    <a
                        href="/portfolio/hotel-booking/resto-bar"
                        class="services"
                    >
                        <div class="icon">
                            <span class="fa-solid fa-utensils"></span>
                        </div>
                        <div class="text">
                            <h2>Ресторант</h2>
                        </div>
                    </a>
                </div>
                <div
                    class="col-md-3 col-xl-2 text-center d-flex align-items-stretch"
                    data-aos="fade-up"
                    data-aos-delay="400"
                    data-aos-duration="1000"
                >
                    <a href="/portfolio/hotel-booking/about" class="services">
                        <div class="icon">
                            <span class="fa-solid fa-person-swimming"></span>
                        </div>
                        <div class="text">
                            <h2>Плувен басейн</h2>
                        </div>
                    </a>
                </div>
                <div
                    class="col-md-3 col-xl-2 text-center d-flex align-items-stretch"
                    data-aos="fade-up"
                    data-aos-delay="500"
                    data-aos-duration="1000"
                >
                    <a href="/portfolio/hotel-booking/about" class="services">
                        <div class="icon">
                            <span class="fa-solid fa-spa"></span>
                        </div>
                        <div class="text">
                            <h2>Красота и здраве</h2>
                        </div>
                    </a>
                </div>
                <div
                    class="col-md-3 col-xl-2 text-center d-flex align-items-stretch"
                    data-aos="fade-up"
                    data-aos-delay="600"
                    data-aos-duration="1000"
                >
                    <a href="/portfolio/hotel-booking/contact" class="services">
                        <div class="icon">
                            <span class="fa-solid fa-headset"></span>
                        </div>
                        <div class="text">
                            <h2>Помощ и поддръжка</h2>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>

    <HotelFooter slot="footer" />
</HotelLayout>

<script is:inline>
    document.addEventListener("DOMContentLoaded", function () {
        const bookBtns = document.querySelectorAll(".btn-custom");
        bookBtns.forEach((btn) => {
            btn.addEventListener("click", function (e) {
                e.preventDefault();
                const roomName =
                    this.closest(".text").querySelector("h3 a").textContent;

                Swal.fire({
                    title: "Резервация на " + roomName,
                    text: "Моля, използвайте формата за резервация на началната ни страница, за да изберете дати.",
                    icon: "info",
                    showCancelButton: true,
                    confirmButtonColor: "#1E4D2B",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Към началната страница",
                    cancelButtonText: "Затвори",
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href =
                            "/portfolio/hotel-booking#booking";
                    }
                });
            });
        });
    });
</script>

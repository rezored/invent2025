---
import HotelLayout from "../../../layouts/HotelLayout.astro";
import HotelHeader from "../../../components/hotel/HotelHeader.astro";
import HotelFooter from "../../../components/hotel/HotelFooter.astro";
---

<HotelLayout title="Хотел Кралска Градина | Ресторант и Бар">
    <HotelHeader slot="header" activePage="resto-bar" />

    <section
        class="hero-wrap hero-wrap-2"
        style="background-image: url('/wp-templates/hotel-booking/images/bg_1.jpg');"
    >
        <div class="overlay"></div>
        <div class="container">
            <div
                class="row no-gutters slider-text align-items-center justify-content-center"
            >
                <div class="col-lg-10 text-center">
                    <p class="breadcrumbs">
                        <span class="me-2"
                            ><a href="/portfolio/hotel-booking"
                                >Начало <i class="fa fa-chevron-right"></i></a
                            ></span
                        >
                        <span
                            >Ресторант и Бар <i class="fa fa-chevron-right"
                            ></i></span>
                    </p>
                    <h1 class="mb-0 bread">Ресторант и Бар</h1>
                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section">
        <div class="container-fluid">
            <div class="row justify-content-center pb-4">
                <div
                    class="col-md-7 text-center heading-section"
                    data-aos="fade-up"
                    data-aos-duration="1000"
                >
                    <span class="subheading">Кулинарно изкушение</span>
                    <h2 class="mb-3">Ресторант и Бар</h2>
                </div>
            </div>
            <div class="row g-md-5">
                <div class="col-md-12 col-xl-5 d-flex align-items-stretch">
                    <div
                        class="img w-100 img-cuisine"
                        style="background-image: url(/wp-templates/hotel-booking/images/resto-bar.jpg);"
                        data-aos="fade-up"
                        data-aos-delay="100"
                        data-aos-duration="1000"
                    >
                        <div
                            class="icon d-flex align-items-center justify-content-center"
                        >
                            <span class="fa fa-utensils"></span>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-xl-7 ps-xl-5">
                    <div class="row g-md-2">
                        <div class="col-md-6">
                            <div
                                class="pricing-entry d-flex align-items-center"
                                data-aos="fade-up"
                                data-aos-delay="100"
                                data-aos-duration="1000"
                            >
                                <div class="desc ps-3">
                                    <div class="d-flex text">
                                        <h3>
                                            <span
                                                >Телешко на грил с билкови
                                                картофи</span>
                                        </h3>
                                        <span class="price">45.00 лв.</span>
                                    </div>
                                </div>
                            </div>
                            <div
                                class="pricing-entry d-flex align-items-center"
                                data-aos="fade-up"
                                data-aos-delay="200"
                                data-aos-duration="1000"
                            >
                                <div class="desc ps-3">
                                    <div class="d-flex text">
                                        <h3>
                                            <span
                                                >Пъстърва на тиган с филиран
                                                бадем</span>
                                        </h3>
                                        <span class="price">32.00 лв.</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div
                                class="pricing-entry d-flex align-items-center"
                                data-aos="fade-up"
                                data-aos-delay="300"
                                data-aos-duration="1000"
                            >
                                <div class="desc ps-3">
                                    <div class="d-flex text">
                                        <h3>
                                            <span
                                                >Свежа салата с козе сирене и
                                                орехи</span>
                                        </h3>
                                        <span class="price">18.00 лв.</span>
                                    </div>
                                </div>
                            </div>
                            <div
                                class="pricing-entry d-flex align-items-center"
                                data-aos="fade-up"
                                data-aos-delay="400"
                                data-aos-duration="1000"
                            >
                                <div class="desc ps-3">
                                    <div class="d-flex text">
                                        <h3>
                                            <span
                                                >Домашен ябълков пай с ванилов
                                                сладолед</span>
                                        </h3>
                                        <span class="price">12.00 лв.</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <HotelFooter slot="footer" />
</HotelLayout>

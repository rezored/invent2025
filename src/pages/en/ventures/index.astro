---
import Layout from "../../../layouts/Layout.astro";
import HeaderMain from "../../../components/HeaderMain.astro";
import FooterMain from "../../../components/FooterMain.astro";
import { getLangFromUrl, localizePath } from "../../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const pageTitle = "Ventures | Invent2025";
const currentYear = new Date().getFullYear();
---

<Layout title={pageTitle} lang={lang}>
    <HeaderMain slot="header" />

    <main class="flex-1">
        <div class="mb-12">
            <h1 class="text-4xl md:text-5xl font-bold mb-4">Our Ventures</h1>
            <p class="text-xl text-slate-400 max-w-2xl">
                Innovative products and protocols built in the lab and deployed
                to the real world.
            </p>
        </div>

        <!-- Products Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- 1. Inviteathon -->
            <a
                href={localizePath("/ventures/inviteathon", lang)}
                class="bg-surface-dark p-6 rounded-2xl border border-border-dark relative overflow-hidden group card-hover flex flex-col h-full"
            >
                <div class="scanline"></div>
                <div
                    class="absolute top-0 right-0 w-24 h-24 bg-blue-500/10 rounded-full blur-2xl -mr-10 -mt-10"
                >
                </div>

                <div class="flex justify-between items-start mb-6">
                    <div
                        class="w-12 h-12 bg-white rounded-xl flex items-center justify-center overflow-hidden"
                    >
                        <span class="material-symbols-outlined text-black"
                            >celebration</span
                        >
                    </div>
                    <span
                        class="inline-flex items-center px-2 py-1 rounded text-[10px] font-mono font-bold bg-green-500/10 text-green-500 border border-green-500/20"
                    >
                        LIVE
                    </span>
                </div>

                <h4 class="text-xl font-bold mb-2">Inviteathon</h4>
                <p class="text-sm text-slate-400 mb-6 flex-1">
                    B2B SaaS for Party Centers.
                    <br />
                    <span class="text-white">10,000+ Users.</span>
                </p>

                <div
                    class="mt-auto border-t border-slate-700 pt-4 flex justify-between items-center"
                >
                    <span class="text-xs font-bold text-primary"
                        >View Case Study →</span
                    >
                </div>
            </a>

            <!-- 2. Pingmark -->
            <a
                href={localizePath("/ventures/pingmark", lang)}
                class="bg-surface-dark p-6 rounded-2xl border border-border-dark relative overflow-hidden group card-hover flex flex-col h-full"
            >
                <div class="scanline"></div>
                <div
                    class="absolute top-0 right-0 w-24 h-24 bg-purple-500/10 rounded-full blur-2xl -mr-10 -mt-10"
                >
                </div>

                <div class="flex justify-between items-start mb-6">
                    <div
                        class="w-12 h-12 bg-purple-900/50 rounded-xl flex items-center justify-center border border-purple-500/30"
                    >
                        <span
                            class="font-mono text-xl font-bold text-purple-400"
                            >!@</span
                        >
                    </div>
                    <span
                        class="inline-flex items-center px-2 py-1 rounded text-[10px] font-mono font-bold bg-purple-500/10 text-purple-400 border border-purple-500/20"
                    >
                        R&D
                    </span>
                </div>

                <h4 class="text-xl font-bold mb-2">Pingmark Protocol</h4>
                <p class="text-sm text-slate-400 mb-6 flex-1">
                    Open spatial semantics standard for efficient location
                    addressing.
                </p>

                <div
                    class="mt-auto border-t border-slate-700 pt-4 flex justify-between items-center"
                >
                    <span class="text-xs font-bold text-purple-400"
                        >Read Abstract →</span
                    >
                </div>
            </a>

            <!-- 3. AscendPass -->
            <a
                href={localizePath("/ventures/ascendpass", lang)}
                class="bg-surface-dark p-6 rounded-2xl border border-border-dark relative overflow-hidden group card-hover flex flex-col h-full"
            >
                <div class="scanline"></div>
                <div class="flex justify-between items-start mb-6">
                    <div
                        class="w-12 h-12 bg-slate-800 rounded-xl flex items-center justify-center"
                    >
                        <span class="material-symbols-outlined text-slate-400"
                            >card_membership</span
                        >
                    </div>
                    <span
                        class="inline-flex items-center px-2 py-1 rounded text-[10px] font-mono font-bold bg-amber-500/10 text-amber-500 border border-amber-500/20"
                    >
                        LIVE SAAS
                    </span>
                </div>

                <h4 class="text-xl font-bold mb-2">AscendPass</h4>
                <p class="text-sm text-slate-400 mb-6 flex-1">
                    Membership system active with real-world clients.
                </p>

                <div
                    class="mt-auto border-t border-slate-700 pt-4 flex justify-between items-center"
                >
                    <span class="text-xs font-bold text-slate-400"
                        >View Platform →</span
                    >
                </div>
            </a>

            <!-- 4. WP Plugin -->
            <a
                href={localizePath("/products/bgn-to-euro-transition", lang)}
                class="bg-surface-dark p-6 rounded-2xl border border-border-dark relative overflow-hidden group card-hover flex flex-col h-full"
            >
                <div class="scanline"></div>
                <div
                    class="absolute top-0 right-0 w-24 h-24 bg-blue-500/10 rounded-full blur-2xl -mr-10 -mt-10"
                >
                </div>

                <div class="flex justify-between items-start mb-6">
                    <div
                        class="w-12 h-12 bg-blue-900/30 rounded-xl flex items-center justify-center border border-blue-500/20"
                    >
                        <span class="material-symbols-outlined text-blue-400"
                            >currency_exchange</span
                        >
                    </div>
                    <span
                        class="inline-flex items-center px-2 py-1 rounded text-[10px] font-mono font-bold bg-blue-500/10 text-blue-400 border border-blue-500/20"
                    >
                        NEW
                    </span>
                </div>

                <h4 class="text-xl font-bold mb-2">Prices in BGN & EUR</h4>
                <p class="text-sm text-slate-400 mb-6 flex-1">
                    WordPress plugin for automatic store currency transition.
                </p>

                <div
                    class="mt-auto border-t border-slate-700 pt-4 flex justify-between items-center"
                >
                    <span class="text-xs font-bold text-blue-400"
                        >View Product →</span
                    >
                </div>
            </a>
        </div>
    </main>

    <FooterMain slot="footer" />
</Layout>

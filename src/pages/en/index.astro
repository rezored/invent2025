---
import Layout from "../../layouts/Layout.astro";
import HeaderMain from "../../components/HeaderMain.astro";
import FooterMain from "../../components/FooterMain.astro";
import { useTranslations } from "../../i18n/utils";

const lang = "en";
const t = useTranslations(lang);
const pageTitle = "Invent2025 | Venture Studio & Engineering Lab";
---

<Layout title={pageTitle} lang={lang}>
    <HeaderMain slot="header" />

    <main class="flex-1 grid grid-cols-1 lg:grid-cols-12 gap-6 auto-rows-min">
        <!-- Hero Section -->
        <section
            class="lg:col-span-8 bg-white dark:bg-surface-dark rounded-2xl p-6 lg:p-10 border border-slate-200 dark:border-border-dark shadow-sm relative overflow-hidden group card-hover"
        >
            <div class="scanline"></div>

            <div
                class="absolute top-0 right-0 w-80 h-80 bg-primary/5 rounded-full blur-3xl -mr-20 -mt-20 pointer-events-none"
            >
            </div>

            <div
                class="flex flex-col md:flex-row gap-8 items-start md:items-center relative z-10"
            >
                <div class="relative shrink-0">
                    <div
                        class="w-32 h-32 rounded-2xl bg-slate-800 bg-cover bg-center border-2 border-primary shadow-xl shadow-primary/10 group-hover:scale-105"
                        style="background-image: url('/assets/Kalin_rq_square.jpg');"
                    >
                    </div>
                    <div
                        class="absolute -bottom-3 -right-3 bg-background-dark p-1 rounded-lg border border-border-dark"
                    >
                        <a
                            href="https://linkedin.com/in/kalin-dimitrov-inviteathon"
                            target="_blank"
                            class="w-8 h-8 flex items-center justify-center rounded bg-blue-700 text-white hover:bg-blue-600 transition-colors"
                        >
                            <span class="material-symbols-outlined text-[18px]"
                                >connect_without_contact</span
                            >
                        </a>
                    </div>
                </div>

                <div class="flex-1">
                    <div class="mb-4">
                        <h2
                            class="text-4xl font-bold leading-tight mb-2 tracking-tight"
                        >
                            {t("hero.title.prefix")}
                            <span
                                class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-accent"
                                >{t("hero.title.suffix")}</span
                            >.
                        </h2>
                        <p
                            class="text-primary font-mono text-sm uppercase tracking-wide"
                        >
                            {t("hero.led_by")}
                        </p>
                    </div>
                    <p
                        class="text-slate-600 dark:text-slate-300 text-lg leading-relaxed mb-6"
                        set:html={t("hero.description")}
                    />
                    <div class="flex flex-wrap gap-3">
                        <a
                            href="/about"
                            class="px-4 py-2 rounded-md bg-slate-800 border border-slate-700 text-xs font-mono text-slate-300 hover:bg-slate-700 transition-colors"
                        >
                            {t("hero.learn_more")}
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Services -->
        <section id="services" class="lg:col-span-4 flex flex-col h-full">
            <div class="flex items-center justify-between mb-4 px-1">
                <h3
                    class="text-sm font-mono uppercase tracking-wider text-slate-500"
                >
                    {t("services.title")}
                </h3>
            </div>
            <div class="grid grid-cols-1 gap-3 h-full">
                <div
                    class="card-hover group bg-white dark:bg-surface-dark p-5 rounded-xl border border-slate-200 dark:border-border-dark cursor-pointer h-full relative overflow-hidden"
                >
                    <div class="scanline"></div>
                    <div class="flex items-start gap-4 relative z-10">
                        <div
                            class="w-10 h-10 rounded-lg bg-blue-500/10 flex items-center justify-center text-blue-500 group-hover:bg-blue-500 group-hover:text-white transition-colors shrink-0"
                        >
                            <span class="material-symbols-outlined"
                                >architecture</span
                            >
                        </div>
                        <div>
                            <h4 class="font-bold text-base text-slate-200">
                                {t("services.architecture.title")}
                            </h4>
                            <p class="text-sm text-slate-400 mt-1">
                                {t("services.architecture.desc")}
                            </p>
                        </div>
                    </div>
                </div>

                <div
                    class="card-hover group bg-white dark:bg-surface-dark p-5 rounded-xl border border-slate-200 dark:border-border-dark cursor-pointer h-full relative overflow-hidden"
                >
                    <div class="scanline"></div>
                    <div class="flex items-start gap-4 relative z-10">
                        <div
                            class="w-10 h-10 rounded-lg bg-emerald-500/10 flex items-center justify-center text-emerald-500 group-hover:bg-emerald-500 group-hover:text-white transition-colors shrink-0"
                        >
                            <span class="material-symbols-outlined"
                                >rocket_launch</span
                            >
                        </div>
                        <div>
                            <h4 class="font-bold text-base text-slate-200">
                                {t("services.mvp.title")}
                            </h4>
                            <p class="text-sm text-slate-400 mt-1">
                                {t("services.mvp.desc")}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Ventures -->
        <section
            id="ventures"
            class="lg:col-span-12 flex flex-col mt-8 lg:mt-0"
        >
            <div
                class="flex items-center justify-between gap-3 mb-5 px-1 border-b border-border-dark pb-2"
            >
                <div class="flex items-center gap-3">
                    <h3 class="text-lg font-bold text-white">
                        {t("ventures.title")}
                    </h3>
                    <span class="text-xs font-mono text-slate-500"
                        >{t("ventures.subtitle")}</span
                    >
                </div>
                <a
                    class="text-xs font-bold text-primary hover:text-primary/80"
                    href="/ventures">{t("ventures.view_all")}</a
                >
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- Inviteathon -->
                <a
                    href="/ventures/inviteathon"
                    class="bg-surface-dark p-6 rounded-2xl border border-border-dark relative overflow-hidden group card-hover flex flex-col h-full"
                >
                    <div class="scanline"></div>
                    <div
                        class="absolute top-0 right-0 w-24 h-24 bg-blue-500/10 rounded-full blur-2xl -mr-10 -mt-10"
                    >
                    </div>

                    <div class="flex justify-between items-start mb-6">
                        <div
                            class="w-12 h-12 bg-white rounded-xl flex items-center justify-center overflow-hidden"
                        >
                            <span class="material-symbols-outlined text-black"
                                >celebration</span
                            >
                        </div>
                        <span
                            class="inline-flex items-center px-2 py-1 rounded text-[10px] font-mono font-bold bg-green-500/10 text-green-500 border border-green-500/20"
                        >
                            {t("ventures.inviteathon.live")}
                        </span>
                    </div>

                    <h4 class="text-xl font-bold mb-2">Inviteathon</h4>
                    <p class="text-sm text-slate-400 mb-6 flex-1">
                        {t("ventures.inviteathon.desc")}
                        <br />
                        <span class="text-white"
                            >{t("ventures.inviteathon.users")}</span
                        >
                    </p>

                    <div
                        class="mt-auto border-t border-slate-700 pt-4 flex justify-between items-center"
                    >
                        <span class="text-xs font-bold text-primary"
                            >{t("ventures.view_case_study")}</span
                        >
                    </div>
                </a>

                <!-- AscendPass -->
                <a
                    href="/ventures/ascendpass"
                    class="bg-surface-dark p-6 rounded-2xl border border-border-dark relative overflow-hidden group card-hover flex flex-col h-full"
                >
                    <div class="scanline"></div>
                    <div class="flex justify-between items-start mb-6">
                        <div
                            class="w-12 h-12 bg-slate-800 rounded-xl flex items-center justify-center"
                        >
                            <span
                                class="material-symbols-outlined text-slate-400"
                                >card_membership</span
                            >
                        </div>
                        <span
                            class="inline-flex items-center px-2 py-1 rounded text-[10px] font-mono font-bold bg-amber-500/10 text-amber-500 border border-amber-500/20"
                        >
                            {t("ventures.ascendpass.live")}
                        </span>
                    </div>

                    <h4 class="text-xl font-bold mb-2">AscendPass</h4>
                    <p class="text-sm text-slate-400 mb-6 flex-1">
                        {t("ventures.ascendpass.desc")}
                    </p>

                    <div
                        class="mt-auto border-t border-slate-700 pt-4 flex justify-between items-center"
                    >
                        <span class="text-xs font-bold text-slate-400"
                            >{t("ventures.view_platform")}</span
                        >
                    </div>
                </a>

                <!-- BGN to EUR Plugin -->
                <a
                    href="/products/bgn-to-euro-transition"
                    class="bg-surface-dark p-6 rounded-2xl border border-border-dark relative overflow-hidden group card-hover flex flex-col h-full"
                >
                    <div class="scanline"></div>
                    <div class="flex justify-between items-start mb-6">
                        <div
                            class="w-12 h-12 bg-blue-900/20 rounded-xl flex items-center justify-center border border-blue-500/30"
                        >
                            <span
                                class="font-mono text-2xl font-bold text-blue-400"
                                >â‚¬</span
                            >
                        </div>
                        <span
                            class="inline-flex items-center px-2 py-1 rounded text-[10px] font-mono font-bold bg-blue-500/10 text-blue-400 border border-blue-500/20"
                        >
                            v1.8.5
                        </span>
                    </div>

                    <h4 class="text-xl font-bold mb-2">Prices in BGN & EUR</h4>
                    <p class="text-sm text-slate-400 mb-6 flex-1">
                        {t("ventures.plugin.desc")}
                    </p>

                    <div
                        class="mt-auto border-t border-slate-700 pt-4 flex justify-between items-center"
                    >
                        <span class="text-xs font-bold text-blue-400"
                            >{t("ventures.view_product")}</span
                        >
                    </div>
                </a>
            </div>
        </section>

        <section id="lab" class="lg:col-span-8 flex flex-col mt-8 lg:mt-0">
            <div class="flex items-center justify-between mb-4 px-1">
                <h3
                    class="text-sm font-mono uppercase tracking-wider text-slate-500"
                >
                    {t("lab.title")}
                </h3>
                <a
                    class="text-xs font-bold text-primary hover:text-primary/80"
                    href="/blog">{t("lab.view_all")}</a
                >
            </div>
            <div class="flex flex-col gap-3">
                <!-- Case Study: Amber Accent -->
                <a
                    href="/blog/bgn-to-euro-convertor"
                    class="card-hover group bg-surface-dark p-5 rounded-r-xl border-y border-r border-border-dark border-l-4 border-l-amber-500 transition-all relative overflow-hidden hover:bg-surface-dark/80"
                >
                    <div class="scanline"></div>
                    <div class="flex justify-between items-center mb-2">
                        <span
                            class="text-[10px] font-mono text-amber-500 font-bold bg-amber-500/10 px-2 py-0.5 rounded uppercase tracking-wider"
                        >
                            {t("lab.case_study")}
                        </span>
                        <span
                            class="text-[11px] text-slate-500 group-hover:text-slate-400 transition-colors"
                            >Jan 2026</span
                        >
                    </div>
                    <h4
                        class="font-bold text-lg text-slate-200 group-hover:text-amber-400 transition-colors group-hover:translate-x-1 duration-200"
                    >
                        Architecture of a Currency Migration Engine
                    </h4>
                </a>

                <!-- Engineering: Cyan Accent -->
                <a
                    href="/blog/nx"
                    class="card-hover group bg-surface-dark p-5 rounded-r-xl border-y border-r border-border-dark border-l-4 border-l-cyan-500 transition-all relative overflow-hidden hover:bg-surface-dark/80"
                >
                    <div class="scanline"></div>
                    <div class="flex justify-between items-center mb-2">
                        <span
                            class="text-[10px] font-mono text-cyan-500 font-bold bg-cyan-500/10 px-2 py-0.5 rounded uppercase tracking-wider"
                        >
                            {t("lab.engineering")}
                        </span>
                        <span
                            class="text-[11px] text-slate-500 group-hover:text-slate-400 transition-colors"
                            >Jan 2026</span
                        >
                    </div>
                    <h4
                        class="font-bold text-lg text-slate-200 group-hover:text-cyan-400 transition-colors group-hover:translate-x-1 duration-200"
                    >
                        Why we chose Nx for Inviteathon?
                    </h4>
                </a>

                <!-- Research: Purple Accent -->
                <a
                    href="/blog/pingmark"
                    class="card-hover group bg-surface-dark p-5 rounded-r-xl border-y border-r border-border-dark border-l-4 border-l-purple-500 transition-all relative overflow-hidden hover:bg-surface-dark/80"
                >
                    <div class="scanline"></div>
                    <div class="flex justify-between items-center mb-2">
                        <span
                            class="text-[10px] font-mono text-purple-500 font-bold bg-purple-500/10 px-2 py-0.5 rounded uppercase tracking-wider"
                        >
                            {t("lab.research")}
                        </span>
                        <span
                            class="text-[11px] text-slate-500 group-hover:text-slate-400 transition-colors"
                            >Dec 2025</span
                        >
                    </div>
                    <h4
                        class="font-bold text-lg text-slate-200 group-hover:text-purple-400 transition-colors group-hover:translate-x-1 duration-200"
                    >
                        Pingmark: Moving beyond GPS coordinates
                    </h4>
                </a>
            </div>
        </section>

        <!-- CTA -->
        <section class="lg:col-span-4 mt-8 lg:mt-0">
            <div
                class="h-full bg-gradient-to-br from-blue-900 to-slate-900 rounded-2xl p-8 text-white flex flex-col justify-between border border-blue-800 shadow-2xl relative overflow-hidden card-hover"
            >
                <div
                    class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 brightness-100 contrast-150"
                >
                </div>
                <div class="relative z-10">
                    <h3 class="text-2xl font-bold mb-4">{t("cta.title")}</h3>
                    <p class="text-blue-100 mb-6 text-sm leading-relaxed">
                        {t("cta.subtitle")}
                    </p>
                    <a
                        href="mailto:kalin.dimitrov@invent2025.org"
                        class="block w-full bg-white text-blue-900 font-bold py-3 rounded-lg text-center hover:bg-blue-50 transition-colors shadow-lg shadow-blue-900/50"
                    >
                        {t("cta.button")}
                    </a>
                </div>
            </div>
        </section>
    </main>

    <FooterMain slot="footer" />
</Layout>

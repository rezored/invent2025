---
import Layout from "../../layouts/Layout.astro";
import HeaderMain from "../../components/HeaderMain.astro";
import FooterMain from "../../components/FooterMain.astro";
import { useTranslations } from "../../i18n/utils";

const lang = "en";
const t = useTranslations(lang);
const pageTitle = "WordPress Portfolio | Invent2025";
---

<Layout title={pageTitle} lang={lang}>
    <HeaderMain slot="header" />

    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="mb-12">
            <h1 class="text-4xl font-bold mb-4">
                WordPress <span class="text-primary">Portfolio</span>
            </h1>
            <p class="text-slate-600 dark:text-slate-400 max-w-2xl">
                A selection of WordPress projects showcasing custom theme
                development, plugin integration, and performance optimization.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {/* Placeholder for now - User can add real projects later */}
            <div
                class="bg-white dark:bg-surface-dark rounded-xl overflow-hidden border border-slate-200 dark:border-border-dark hover:shadow-xl transition-all duration-300 group"
            >
                <div
                    class="h-48 bg-slate-200 dark:bg-slate-800 relative overflow-hidden"
                >
                    <div
                        class="absolute inset-0 flex items-center justify-center text-slate-400"
                    >
                        <span class="material-symbols-outlined text-4xl"
                            >web</span
                        >
                    </div>
                </div>
                <div class="p-6">
                    <h3
                        class="text-xl font-bold mb-2 group-hover:text-primary transition-colors"
                    >
                        Client Project A
                    </h3>
                    <p class="text-slate-500 text-sm mb-4">
                        Custom theme development for a corporate client.
                    </p>
                </div>
            </div>

            <div
                class="bg-white dark:bg-surface-dark rounded-xl overflow-hidden border border-slate-200 dark:border-border-dark hover:shadow-xl transition-all duration-300 group"
            >
                <div
                    class="h-48 bg-slate-200 dark:bg-slate-800 relative overflow-hidden"
                >
                    <div
                        class="absolute inset-0 flex items-center justify-center text-slate-400"
                    >
                        <span class="material-symbols-outlined text-4xl"
                            >shopping_cart</span
                        >
                    </div>
                </div>
                <div class="p-6">
                    <h3
                        class="text-xl font-bold mb-2 group-hover:text-primary transition-colors"
                    >
                        e-Commerce Site B
                    </h3>
                    <p class="text-slate-500 text-sm mb-4">
                        WooCommerce integration with custom checkout flow.
                    </p>
                </div>
            </div>

            <div
                class="bg-white dark:bg-surface-dark rounded-xl overflow-hidden border border-slate-200 dark:border-border-dark hover:shadow-xl transition-all duration-300 group"
            >
                <div
                    class="h-48 bg-slate-200 dark:bg-slate-800 relative overflow-hidden"
                >
                    <div
                        class="absolute inset-0 flex items-center justify-center text-slate-400"
                    >
                        <span class="material-symbols-outlined text-4xl"
                            >article</span
                        >
                    </div>
                </div>
                <div class="p-6">
                    <h3
                        class="text-xl font-bold mb-2 group-hover:text-primary transition-colors"
                    >
                        Blog Portal C
                    </h3>
                    <p class="text-slate-500 text-sm mb-4">
                        High-traffic content portal with ad-network integration.
                    </p>
                </div>
            </div>
        </div>
    </main>

    <FooterMain slot="footer" />
</Layout>

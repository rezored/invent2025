---
import Layout from "../../layouts/Layout.astro";
import { useTranslations } from "../../i18n/utils";

const lang = "bg";
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
---

<Layout title="AscendPass | Invent2025" lang={lang}>
    <header slot="header" class="h-20 flex items-center justify-between mb-8">
        <a href="/" class="flex items-center gap-3 group">
            <img
                src="/assets/invent_2025_logo_icon.svg"
                alt="Invent2025 Logo"
                class="w-10 h-10 group-hover:opacity-80 transition-opacity"
            />
            <div>
                <h1 class="text-xl font-bold tracking-tight font-mono">
                    INVENT<span class="text-primary">2025</span>
                </h1>
                <p
                    class="text-[10px] text-slate-400 uppercase tracking-widest leading-none"
                >
                    Venture Studio
                </p>
            </div>
        </a>
    </header>

    <main class="grid grid-cols-1 lg:grid-cols-12 gap-12">
        <div class="lg:col-span-12">
            <div
                class="relative rounded-3xl overflow-hidden border border-border-dark shadow-2xl mb-12 group"
            >
                <img
                    src="/assets/ascendpass.jpg"
                    alt="AscendPass Dashboard"
                    class="w-full h-auto opacity-80 group-hover:opacity-100 transition-opacity grayscale hover:grayscale-0 duration-700"
                />
                <div
                    class="absolute inset-0 bg-gradient-to-t from-background-dark via-transparent to-transparent opacity-90"
                >
                </div>
                <div class="absolute bottom-0 left-0 p-8 md:p-12">
                    <div class="flex items-center gap-4 mb-4">
                        <div
                            class="w-16 h-16 bg-slate-800 rounded-2xl flex items-center justify-center text-slate-400 shadow-lg border border-slate-700"
                        >
                            <span class="material-symbols-outlined text-3xl"
                                >card_membership</span
                            >
                        </div>
                        <div>
                            <h1 class="text-4xl md:text-5xl font-bold">
                                AscendPass
                            </h1>
                            <p class="text-amber-500 font-mono">
                                {t("ascendpass.subtitle")}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="lg:col-span-8">
            <section class="mb-12">
                <div class="flex items-center gap-3 mb-6">
                    <span
                        class="px-3 py-1 bg-green-500/10 text-green-500 border border-green-500/20 rounded-full text-xs font-mono font-bold uppercase tracking-wider"
                    >
                        {t("ascendpass.status.live")}
                    </span>
                    <span class="h-px bg-border-dark flex-1"></span>
                </div>

                <h2 class="text-2xl font-bold mb-4 text-white">
                    {t("ascendpass.platform.title")}
                </h2>
                <p class="text-lg text-slate-400 leading-relaxed mb-6">
                    {t("ascendpass.platform.desc")}
                </p>
                <p class="text-lg text-slate-400 leading-relaxed">
                    {t("ascendpass.platform.desc2")}
                </p>
            </section>

            <section class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div
                    class="bg-surface-dark p-6 rounded-2xl border border-border-dark"
                >
                    <div
                        class="w-10 h-10 bg-slate-800 rounded-lg flex items-center justify-center mb-4 text-white"
                    >
                        <span class="material-symbols-outlined">payments</span>
                    </div>
                    <h3 class="font-bold text-lg mb-2">
                        {t("ascendpass.billing.title")}
                    </h3>
                    <p class="text-sm text-slate-400">
                        {t("ascendpass.billing.desc")}
                    </p>
                </div>
                <div
                    class="bg-surface-dark p-6 rounded-2xl border border-border-dark"
                >
                    <div
                        class="w-10 h-10 bg-slate-800 rounded-lg flex items-center justify-center mb-4 text-white"
                    >
                        <span class="material-symbols-outlined">security</span>
                    </div>
                    <h3 class="font-bold text-lg mb-2">
                        {t("ascendpass.rbac.title")}
                    </h3>
                    <p class="text-sm text-slate-400">
                        {t("ascendpass.rbac.desc")}
                    </p>
                </div>
            </section>
        </div>

        <div class="lg:col-span-4">
            <div
                class="bg-surface-dark border border-border-dark rounded-2xl p-6 sticky top-8"
            >
                <h3
                    class="font-mono text-xs uppercase text-slate-500 mb-6 tracking-widest"
                >
                    Technicals
                </h3>

                <div class="space-y-6">
                    <div>
                        <div class="text-sm text-slate-400 mb-1">Stack</div>
                        <div class="flex flex-wrap gap-2">
                            <span
                                class="px-2 py-1 bg-slate-800 rounded text-xs font-mono text-white"
                                >Stripe API</span
                            >
                            <span
                                class="px-2 py-1 bg-slate-800 rounded text-xs font-mono text-white"
                                >Oauth2</span
                            >
                            <span
                                class="px-2 py-1 bg-slate-800 rounded text-xs font-mono text-white"
                                >Node.js</span
                            >
                        </div>
                    </div>

                    <div>
                        <div class="text-sm text-slate-400 mb-1">Status</div>
                        <div class="flex items-center gap-2">
                            <span
                                class="w-2 h-2 rounded-full bg-green-500 animate-pulse"
                            ></span>
                            <span class="text-green-500 font-bold text-sm"
                                >Active SaaS</span
                            >
                        </div>
                    </div>

                    <div>
                        <div class="text-sm text-slate-400 mb-1">Clients</div>
                        <div class="text-white font-bold">
                            Active Customer Base
                        </div>
                    </div>
                </div>

                <hr class="border-slate-800 my-6" />

                <a
                    href="https://ascendpass.club"
                    target="_blank"
                    class="block w-full text-center py-3 rounded-lg border border-slate-600 text-slate-300 font-bold hover:bg-slate-800 transition-colors"
                >
                    Visit Platform
                </a>
            </div>
        </div>
    </main>

    <footer
        slot="footer"
        class="mt-20 border-t border-border-dark pt-8 text-center"
    >
        <p class="text-slate-500 text-xs font-mono">
            Â© <span id="current-year">{currentYear}</span> Invent2025 Ltd.
        </p>
    </footer>
</Layout>
